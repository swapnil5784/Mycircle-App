              {{userLogged.totalNotifications}}
            </span>

          </a>
          <div id="notificationList" class="dropdown-menu dropdown-menu-arrow dropdown-menu-end dropdown-menu-card">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Notifications</h3>
              </div>
              {{#each userLogged.notifications}}

              <div class="list-group list">
                <div class="list-group-item">
                  <div class="row align-items-center">

                    {{#compare this.type '==' 'comment'}}
                    <div class="col-auto">
                      <img class="icon" src="/uploads/default/notify-comment.png" alt="">
                    </div>
                    {{else}}
                    <div class="col-auto">
                      <img class="icon" src="/uploads/default/notify-save.png" alt="">
                    </div>
                    {{/compare}}

                    <div style="padding:0 100px 0 0;" class="col text-truncate">
                      <a href="#" class="text-body d-block">{{moment this.createdOn}}</a>
                      <div class="d-block text-muted text mt-n1">
                        {{this.title}}
                      </div>
                    </div>
                    <div id="seenBtn" data-notification-id="{{this._id}}" data-notification-owner="{{this._to}}" class="col">
                        <img id="seenIcon" class="icon" src="/uploads/default/seen.png" alt="">
                    </div>
                  </div>
                </div>

              </div>
              {{/each}}
