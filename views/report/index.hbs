<h4 class="text-muted"> Report Page </h4>
<div class="col-12">
                <div class="card">
                  <div class="table-responsive">
                    <table class="table table-vcenter card-table table-striped">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Gender</th>
                          <th>Posts created</th>
                          <th>Posts saved</th>
                        </tr>
                      </thead>
                      <tbody>

{{#each users}}
                        <tr>
                          <td><img class="avatar me-2" src="{{this.profileImagePath}}" alt="">{{this.firstName}} {{this.lastName}}</td>
                          <td class="text-muted">
                            {{this.userEmail}}
                          </td>
                          <td>{{this.gender}}</td>
                          <td class="text-muted">
                            {{this.posts}}
                          </td>
                          <td class="text-muted">
                            {{this.savedPosts}}
                          </td>
                          
                        </tr>
{{/each}}
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
