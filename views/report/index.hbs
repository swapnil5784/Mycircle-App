                            {{this.postDescription}}
                          </td>
                          <td class="text-muted"><img class="avatar me-2" src="{{this.user.profileImagePath}}" alt=""> {{this.user.firstName}} {{this.user.lastName}}</td>
                          <td class="text-muted">
                            {{this.createdOn}}
                          </td>
                          <td class="text-muted">
                            {{this.updatedOn}}
                          </td>
                          
                        </tr>
                        
{{/each}}         
                      </tbody>
                    </table>
                  </div>
