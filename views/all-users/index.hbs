<div id="renderHere">
<div class="row row-cards">
    {{#if users}}
  {{#each users}}
              <div class="arrangedUsers col-md-6 col-lg-3">
                <div class="card">
                  <div class="card-body p-4 text-center">
                    {{#compare this._id "==" ../user._id}}
                    <img style="border:5px solid rgb(111, 255, 130);" class="avatar avatar-xl mb-3 rounded" src="{{this.profileImagePath}}" alt="">
                    {{/compare}}
                    {{#compare this._id "!=" ../user._id}}
                    <img  class="avatar avatar-xl mb-3 rounded" src="{{this.profileImagePath}}" alt="">
                    {{/compare}}
                    
                    <h3 class="m-0 mb-1"><a>{{this.firstName}} {{this.lastName}}</a></h3>
                    <div class="text-muted">{{this.userEmail}}</div>
                    <div class="mt-3">
                      Gender:
                      <span class="badge bg-purple-lt">{{this.gender}}</span>
                    </div>
                    <br>
                    <div class="text-muted">Joined On: {{this.createdOn}}</div>
                  </div>
                  <div class="d-flex">
                    <a href="#" class="card-btn">Posts Created: {{this.posts}}</a>
                    <a href="#" class="card-btn">Posts Saved: {{this.savedPosts}}</a>
                  </div>
                </div>

              </div>
{{/each}}
{{/if}}
  </div>
</div>
