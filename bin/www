#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('mycircle-application:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

global.io = require('socket.io')(server)
// server side socket
try{
io.on('connection',function(socket){
  console.log('---------------------------->  socket successfully connected!',socket.id)
  socket.broadcast.emit('online',user._id)
  socket.on('disconnect',function(){
    console.log('------------------> socket disconnected')
  })
  socket.join(user._id)
  // console.log(user._id)  

  socket.on('postSaved',function(data){
    console.log("--------------------->PostOwner",data.postBy)
    io.sockets.to(data.postBy).emit('backToPostsaved', 'saved by '+user.firstName+" "+user.lastName )
  })

  socket.on('commentAdded',(data)=>{
    console.log('---------------------------->  socket listened in comment added!')
    console.log('--------------->addedComment data',data)
    console.log(data.postBy," === ",user._id)
    if(data.postBy != user._id){
      io.sockets.to(data.postBy).emit('showCommentAddedMessage','commented by '+user.firstName+" "+user.lastName)
    }
  })

  socket.on('seenBtnClicked',function(data){
    console.log('seen btn clicked --------> data',data)
    io.sockets.to(data.notificationTo).emit('removeNotificationFromList',data)
  })

  // socket.on('sendMessage',function(data){
  //   try{
  //     console.log('-----------------------> socket server send message',data)
  //     io.sockets.to(data.receiver).emit('responseToEventSendMessage',data)
  //   }
  //   catch(error){
  //     console.log('------------> error at send message event lister on socket sever.',error)
  //   }
  // })

})


}
catch(error){
  console.log('---------------> error at socket server',error)
}


/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port ,()=>{
  console.log(`port started ==> http://localhost:${port}`)
});
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
